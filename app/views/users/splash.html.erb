<% content_for :title, 'My-Exp' %>
<section class= "splash">
<div class = "splash-cont">
<%= image_tag ("my-exp-low-resolution-logo-color"), class: 'image logo' %>
</div>
<div class="signin-signup">
  <%= link_to new_user_session_path, class: 'signin' do %>
    <span class="group-hover:text-main text-white uppercase font-semibold">Log In</span>
  <% end %>
